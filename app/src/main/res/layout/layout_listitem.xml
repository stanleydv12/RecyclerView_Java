<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout"
    android:padding="10dp"
    android:layout_marginTop="7dp"
    android:background="@drawable/shape_list"
    android:elevation="3dp"

    >

    //Image Bulet
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="20dp"
        android:id="@+id/image_list"
        android:src="@mipmap/ic_launcher">

    </de.hdodenhof.circleimageview.CircleImageView>
    //Text disebelah gambar
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_list"
        android:layout_toRightOf="@id/image_list"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        >

        //Judul
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/app_name"
            android:id="@+id/judul_list"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            android:fontFamily="@font/framd">

        </TextView>
        //Keterangan
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/calibril"
            android:text="TESTING KNFWOWFBOAUHFUIWHFO jgbsebgro bsgubawoug wgbaawbagb uraw auorhguoawhg aghaowuh "
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/keterangan_list"
            ></TextView>



    </LinearLayout>


</RelativeLayout>